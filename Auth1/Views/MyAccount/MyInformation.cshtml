@model FITNESSGYM.Models.Client


@{
}

<!-- Syle CSS appliqué-->
<link rel="stylesheet" media="screen" type="text/css" title="ledesigndetonindex" href="~/css/MyAccountStyle.css" />


<!-- view html-->

<body>

    <div class="main-content">

        <!-- Top navbar -->
        <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
            <div class="container-fluid">

                <ul block="block-monespace" class="clearfix nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="MyAccount" asp-action="MyInformation">My Informations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="MyAccount" asp-action="MySubscription">My Subscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="MyAccount" asp-action="MyReservations">My Reservations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="MyAccount" asp-action="Myfavorites">My favorites</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="MyAccount" asp-action="MyGoal">My Goal</a>
                    </li>
                    <li class="nav-item menu-item--active-trail">
                        <a class="nav-link" asp-area="" asp-controller="MyAccount" asp-action="ChangePassword">Change Password</a>
                    </li>

                </ul>                                 

            </div>
        </nav>



        <!-- Header -->
        <div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center" style="min-height: 600px; background-image: url(../../wwwroot/Assets/Site/fit.jpg); background-size: cover; background-position: center top;">

            <!-- Mask -->
            <span class="mask bg-gradient-default opacity-8"></span>

            <!-- Header container -->
            <div class="container-fluid d-flex align-items-center">
                <div class="row">
                    <div class="col-lg-7 col-md-10">
                        <h1 class="display-2 text-white">Hello @Model.FirstName ! </h1>
                        <p class="text-white mt-0 mb-5">This is your profile page. You can see and edit your informations. You can also see the progress you've made with your work through time.</p>
                        <!--<a href="#!" class="btn btn-info">Edit profile</a>-->
                    </div>
                </div>
            </div>
        </div>

        <!-- Page content -->
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                    <div class="card card-profile shadow">
                        <div class="row justify-content-center">
                            <div class="col-lg-3 order-lg-2">
                                <div class="card-profile-image">
                                    <a href="#">
                                        <img src="~/Assets/MyAccount/David.jfif" class="rounded-circle"> <!--Remplacver par model image-->
                                    </a>
                                </div>
                            </div>
                        </div>                       
                        <div class="card-body pt-0 pt-md-4">
                            <div class="row">
                                <div class="col">
                                    <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                                        <div>
                                            <span class="heading">2</span>
                                            <span class="description"> Days since your last visit</span>
                                        </div>
                                        <div>
                                            <span class="heading">22</span>
                                            <span class="description">Number of visits</span>
                                        </div>
                                        <div>
                                            <span class="heading">3</span>
                                            <span class="description">Clubs visited</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <h3>
                                    @Model.FirstName @Model.LastName<span class="font-weight-light"></span> 
                                </h3>
                                <!--<div class="h5 font-weight-300">
                                    <i class="ni location_pin mr-2"></i>Paris, France 
                                </div>-->
                                <!--<div class="h5 mt-4">
                                    <i class="ni business_briefcase-24 mr-2"></i>Member since 2022-06-12
                                </div>-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">My Profile</h3>
                                </div>
                                <!---<div class="col-4 text-right">
                                    <a href="#!" class="btn btn-sm btn-primary">Save changes</a>
                                   <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>-->

                                <br /><br />
                                <div>
                                    <p>To modify some informations, please take contact with your club. </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form>
                                <h6 class="heading-small text-muted mb-4">My Identity</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-first-name">First name</label>
                                                <input type="text" id="input-first-name" class="form-control form-control-alternative" disabled="disabled" placeholder="First Name" value="@Model.FirstName">
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-last-name">Last name</label>
                                                <input type="text" id="input-last-name" class="form-control form-control-alternative" disabled="disabled" placeholder="Last name" value="@Model.LastName">
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-birthdate">Birthdate</label>
                                                <input type="datetime" id="input-sex" class="form-control form-control-alternative" disabled="disabled" placeholder="birthdate" value="@Model.Birthdate">
                                            </div>
                                        </div>
                                    </div>                                                                  
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-sex">Sex</label>
                                                <input type="text" id="input-sex" class="form-control form-control-alternative" disabled="disabled" placeholder="sex" value="@Model.Sex">
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-weight">Weight</label>
                                                <input type="text" id="input-weight" class="form-control form-control-alternative" placeholder="Weight" value="@Model.Weight kg">
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-height">Height</label>
                                                <input type="text" id="input-height" class="form-control form-control-alternative" disabled="disabled" placeholder="Height" value="@Model.Height cm">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4">
                                <!-- Address -->
                                <h6 class="heading-small text-muted mb-4">My contact information</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-phonenumber">Phone number</label>
                                                <input type="text" id="input-phonenumber" class="form-control form-control-alternative" disabled="disabled" placeholder="Phone number" value="@Model.Phonenumber">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Email address</label>
                                                <input type="email" id="input-email" class="form-control form-control-alternative" disabled="disabled" placeholder="name@example.com" value=""> <!-- Remplacer par email-->
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-address">Address</label>
                                                <input id="input-address" class="form-control form-control-alternative" placeholder="Home Address" value="@Model.Adresse" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <!--<div class="row">
                                        <div class="col-lg-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-city">City</label>
                                                <input type="text" id="input-city" class="form-control form-control-alternative" placeholder="City" value="Paris"> 
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-country">Country</label>
                                                <input type="text" id="input-country" class="form-control form-control-alternative" placeholder="Country" value="France"> 
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-country">Postal code</label>
                                                <input type="number" id="input-postal-code" class="form-control form-control-alternative" placeholder="Postal code" value="France"> 
                                            </div>
                                        </div>
                                    </div>-->
                                </div>
                                <hr class="my-4">
                                <!-- Description -->
                                <h6 class="heading-small text-muted mb-4">About me</h6>
                                <div class="pl-lg-4">
                                    <div class="row"> 
                                        <div class="col-lg-12">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-hobies">Hobies</label>
                                                <input type="text" id="input-hobies" class="form-control form-control-alternative" placeholder="Hobies" value="@Model.Hobbies">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-disease">Disease</label>
                                                <input type="text" id="input-disease" class="form-control form-control-alternative" placeholder="none" value="@Model.Diseases">
                                            </div>
                                        </div>
                                    </div>                                                                                           
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <br />
    <br />
    <br />
   
</body>